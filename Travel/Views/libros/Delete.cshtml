@model Travel.Models.auxiliar.libroAutor

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete Libro</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Editorial
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.nombre_editorial)
        </dd>
        <dt class="col-sm-2">
            Autor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.nombre_autor)
        </dd>
        <dt class = "col-sm-2">
            Titulo
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.titulo)
        </dd>
        <dt class = "col-sm-2">
            Sinopsis
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.sinopsis)
        </dd>
        <dt class = "col-sm-2">
            Número de páginas
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.n_paginas)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="ISBN" />
        <input type="submit" style="font-size: 10px" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" style="font-size: 10px" class="btn btn-primary"><i class="fa fa-arrow-rotate-back"></i> Back to List</a>
    </form>
</div>
